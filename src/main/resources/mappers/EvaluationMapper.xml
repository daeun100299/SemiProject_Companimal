    <select id="selectCreatorEvaluationList" resultMap="CreatorEvaluationResultMap" parameterType="map">
        SELECT
            C.MEM_ID ,
            E.EVA_NUM ,
            E.EVA_DATETIME ,
            E.EVA_SITUATION ,
            E.REA_REJECTION ,
            I.CRE_INQ_PHONE ,
            I.CRE_INQ_EMAIL ,
            I.CRE_IMG_NAME ,
            I.CRE_IMG_PATH ,
            I.CRE_IMG_ORI_NAME ,
            I.BANK_NAME ,
            I.ACCOUNT_NO ,
            I.DEPOSITOR_NAME ,
            B.BUSI_NUM ,
            B.BUSI_NAME ,
            B.BUSI_DATE ,
            B.BUSI_TYPE ,
            B.BUSI_INDUSTRY ,
            B.BUSI_LOCA ,
            B.BUSI_SIZE ,
            B.BUSI_URL ,
            B.AUTH_NAME ,
            B.AUTH_NUM,
            CASE
                WHEN B.BUSI_NUM IS NULL THEN '개인'
                ELSE '사업자'
                END AS CREATOR_TYPE
        FROM CREATOR_EVA C
                 JOIN EVALUATION E ON C.EVA_NUM = E.EVA_NUM
                 JOIN CREATOR_INFO I ON C.MEM_ID = I.MEM_ID
                 LEFT JOIN CREATOR_BUSINESS B ON B.MEM_ID = I.MEM_ID
        ORDER BY C.EVA_NUM ASC
            LIMIT #{limit} OFFSET #{offset};
    </select>

    <select id="countTotalItems" resultType="int">
        SELECT COUNT(*)
        FROM CREATOR_EVA C
                 JOIN EVALUATION E ON C.EVA_NUM = E.EVA_NUM
                 JOIN CREATOR_INFO I ON C.MEM_ID = I.MEM_ID
                 LEFT JOIN CREATOR_BUSINESS B ON B.MEM_ID = I.MEM_ID;
    </select>

    <select id="selectCreatorEvaluationDetail" resultMap="CreatorEvaluationDetailResultMap">
        SELECT
            C.MEM_ID ,
            E.EVA_NUM ,
            E.EVA_DATETIME ,
            E.EVA_SITUATION ,
            E.REA_REJECTION ,
            I.CRE_INQ_PHONE ,
            I.CRE_INQ_EMAIL ,
            I.CRE_IMG_NAME ,
            I.CRE_IMG_PATH ,
            I.CRE_IMG_ORI_NAME ,
            I.BANK_NAME ,
            I.ACCOUNT_NO ,
            I.DEPOSITOR_NAME ,
            B.BUSI_NUM ,
            B.BUSI_NAME ,
            B.BUSI_DATE ,
            B.BUSI_TYPE ,
            B.BUSI_INDUSTRY ,
            B.BUSI_LOCA ,
            B.BUSI_SIZE ,
            B.BUSI_URL ,
            B.AUTH_NAME ,
            B.AUTH_NUM,
            F.CRE_FILE_PATH ,
            F.CRE_FILE_NAME ,
            F.CRE_FILE_ORI_NAME,
            CASE
                WHEN B.BUSI_NUM IS NULL THEN '개인'
                ELSE '사업자'
                END AS CREATOR_TYPE
        FROM CREATOR_EVA C
                 JOIN EVALUATION E ON C.EVA_NUM = E.EVA_NUM
                 JOIN CREATOR_INFO I ON C.MEM_ID = I.MEM_ID
                 LEFT JOIN CREATOR_BUSINESS B ON B.MEM_ID = I.MEM_ID
                 JOIN CREATOR_FILE F ON I.MEM_ID = F.MEM_ID
        WHERE C.EVA_NUM = #{ evaNum }
    </select>

